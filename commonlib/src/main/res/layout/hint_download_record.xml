<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:background="@color/gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/popu_tips_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/white"
        android:text="@string/tips_downlaoding_video"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rate_loading_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dip"
        android:gravity="center"
        android:text="0%"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <SeekBar
        android:id="@+id/sb_downloading_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
<TextView
    android:id="@+id/txt_downloadfile"
    android:textColor="@color/white"
    android:textSize="13dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/cancel_btn_downloading_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:textSize="16dp"
            android:textColor="#444444"
            android:padding="0dp"
            android:background="@drawable/click_btn_bg"
            android:text="@string/cancel" />


    </LinearLayout>

</LinearLayout>