<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:baselineAligned="false"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
<LinearLayout
	android:layout_width="60dp"
	android:layout_marginRight="-60dp"
	android:orientation="vertical"
	android:layout_height="match_parent">
	<ImageView
		android:id="@+id/img_line_top"
		android:layout_width="1dp"
		android:background="#e5e5e5"
		android:layout_marginLeft="50dp"
		android:layout_height="13dp" />
	<ImageView
		android:id="@+id/img_dot"
		android:layout_width="8dp"
		android:layout_height="8dp"
		android:layout_marginLeft="46dp"
		android:background="@drawable/list_item_date_split_dot"
		android:scaleType="fitCenter"/>
	<ImageView
		android:layout_width="1dp"
		android:background="#e5e5e5"
		android:layout_marginLeft="50dp"
		android:layout_height="match_parent" />
</LinearLayout>

<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
<LinearLayout
	android:id="@+id/ll_title"
	android:layout_width="match_parent"
	android:gravity="left|center"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/txt_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:text="07/13"
		android:textColor="@color/gray"
		android:textSize="10dp" />

	<TextView
		android:id="@+id/txt_title"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="2015/07/13"
		android:layout_marginLeft="26dp"
		android:textColor="@color/gray"
		android:textSize="12dp" />
	<ImageView
		android:id="@+id/img_group_check"
		android:layout_width="34dp"
		android:clickable="true"
		android:scaleType="center"
		android:layout_height="34dp"
		android:layout_marginRight="13dp"
		app:srcCompat="@drawable/btn_img_check_24dp_folder"
		/>
</LinearLayout>

	<com.tws.commonlib.view.TwsGridView
		android:id="@+id/gridview_subItemList"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="60dp"
		android:layout_marginRight="10dp"></com.tws.commonlib.view.TwsGridView>
</LinearLayout>
</LinearLayout>