<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textColor="@color/white"
    android:gravity="center"
    android:textSize="18dp"
    android:background="@color/colorPrimary"
    android:text="@string/title_camera_photos_videos"/>

    <ImageView
        android:layout_width="match_parent"
        style="@style/split_long_thin_style"/>
    <TextView
        android:id="@+id/txt_nocamera"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/tips_nocamera"
        android:textColor="@color/lightgray"
        android:textSize="40dp"
        android:paddingBottom="200dp"
        android:layout_height="match_parent" />
    <ListView
        android:id="@+id/picture_fragment_camera_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:divider="@color/lightestgray"
        android:dividerHeight="1dip" />
    <ImageView
        android:layout_width="match_parent"
        style="@style/split_long_thin_style"/>

</LinearLayout>