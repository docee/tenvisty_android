<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tws.commonlib.controller.NavigationBar
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:clickable="true"
        android:onClick="clickLine"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/txt_uid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/lab_camera_uid"
            android:textColor="#333333"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtUID"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/txt_uid"
            android:background="@null"
            android:cursorVisible="true"
            android:digits="@string/filter_vcode"
            android:hint="@string/hint_input_camera_uid"
            android:inputType="textCapCharacters"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#333333"
            android:textCursorDrawable="@null"
            android:textSize="15dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:background="#DDDDDD" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/tips_inputuid_maually"
            android:textColor="@color/gray"
            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>