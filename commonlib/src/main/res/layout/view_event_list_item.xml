<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="-35dp">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="#e5e5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_event_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_event_list_item_day"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="2015/07/13"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_event_type_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_motion_detection_unread" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_popuwindow_left" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/background_light_gray_corner"
                android:gravity="left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Camera"
                        android:textColor="#727272"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="2015/12/12"
                        android:textColor="#727272"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Motion Detection"
                        android:textColor="#727272"
                        android:textSize="14dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="69dp"
                    android:layout_height="52dp"
                    android:layout_marginRight="15dp">

                    <com.tws.commonlib.ui.RecyclingImageView
                        android:id="@+id/img_event_image"
                        android:layout_width="69dp"
                        android:layout_height="52dp"
                        android:background="@drawable/view_event_record" />
                    <ImageView
                        android:id="@+id/img_play"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_play_circle_outline_24dp"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>