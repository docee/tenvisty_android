<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#CCCCCC" />
            <corners
                android:bottomRightRadius="6dp"
                android:topRightRadius="6dp">

            </corners>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:right="1dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="@color/white" />
            <corners
                android:bottomRightRadius="6dp"
                android:topRightRadius="6dp">

            </corners>
        </shape>
    </item>
</layer-list>